@model ManufacturingERP.Entity.ProductionPlan

@{
    ViewData["Title"] = "Delete Production Plan";
}

<h2>Delete Production Plan</h2>

<hr />
<div class="row">
    <div class="col-md-6">
        <h4>Are you sure you want to delete this production plan?</h4>

        <dl class="row">

            <dt class="col-sm-4">Production Date</dt>
            <dd class="col-sm-8">@Model.ProductionDate.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-4">Shift</dt>
            <dd class="col-sm-8">@Model.Shift</dd>

            <dt class="col-sm-4">Finished Goods</dt>
            <dd class="col-sm-8">@Model.FinishedGoodsMaster?.FinishedGoodsName</dd>

            <dt class="col-sm-4">Planned Quantity</dt>
            <dd class="col-sm-8">@Model.PlannedQuantity</dd>

            <dt class="col-sm-4">Status</dt>
            <dd class="col-sm-8">@((Model.IsActive) ? "Active" : "Inactive")</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="ProductionPlanId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

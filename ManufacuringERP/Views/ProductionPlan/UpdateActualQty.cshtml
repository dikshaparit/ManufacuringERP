@model ManufacturingERP.Entity.ProductionPlan

@{
    ViewData["Title"] = "Update Actual Quantity";
}

<h2>Update Actual Quantity</h2>

<form asp-action="UpdateActualQty" method="post">
    <input type="hidden" asp-for="ProductionPlanId" />

    <div class="mb-3">
        <label asp-for="ProductionDate" class="form-label"></label>
        <input asp-for="ProductionDate" class="form-control" type="date" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="Shift" class="form-label"></label>
        <input asp-for="Shift" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label>Finished Goods</label>
        <input class="form-control" value="@Model.FinishedGoodsMaster?.FinishedGoodsName" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="PlannedQuantity" class="form-label"></label>
        <input asp-for="PlannedQuantity" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="ActualQuantity" class="form-label"></label>
        <input asp-for="ActualQuantity" class="form-control" type="number" min="0" />
        <span asp-validation-for="ActualQuantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

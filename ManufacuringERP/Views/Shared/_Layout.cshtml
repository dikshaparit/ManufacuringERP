<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Manufacturing ERP</title>

    <!-- Bootstrap CSS from CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ManufacuringERP.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Manufacturing ERP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <style>
    /* Navbar background */
    .navbar-nav {
        gap: 1rem; /* spacing between nav items */
    }

    /* Links style */
    .navbar-nav .nav-link {
        color: #343a40; /* dark gray */
        font-weight: 600;
        padding: 0.5rem 1rem;
        border-radius: 0.375rem; /* rounded corners */
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    /* Hover effect */
    .navbar-nav .nav-link:hover {
        background-color: #0d6efd; /* Bootstrap primary blue */
        color: white;
        text-decoration: none;
    }

    /* Active link style */
    .navbar-nav .nav-link.active,
    .navbar-nav .nav-link:focus {
        background-color: #0b5ed7; /* darker primary */
        color: white;
        font-weight: 700;
        box-shadow: 0 0 8px rgba(13, 110, 253, 0.5);
    }
</style>

<div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav me-auto">
        <li class="nav-item">
            <a class="nav-link @((ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Home") ? "active" : "")" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link @((ViewContext.RouteData.Values["action"]?.ToString() == "Privacy" && ViewContext.RouteData.Values["controller"]?.ToString() == "Home") ? "active" : "")" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </li>
        <li class="nav-item">
            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "Vendor") ? "active" : "")" asp-controller="Vendor" asp-action="Index">Vendor</a>
        </li>
        <li class="nav-item">
            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "RawMaterial") ? "active" : "")" asp-controller="RawMaterial" asp-action="Index">Raw Material</a>
        </li>
        <li class="nav-item">
            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "PurchaseOrder") ? "active" : "")" asp-controller="PurchaseOrder" asp-action="Index">Purchase Order</a>
        </li>
        <li class="nav-item">
            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "GRN") ? "active" : "")" asp-controller="GRN" asp-action="Index">GRN</a>
        </li>
        <li class="nav-item">
            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "PurchaseOrderTrack") ? "active" : "")" asp-controller="PurchaseOrderTrack" asp-action="Index">Purchase Order Track</a>
        </li>
        <li class="nav-item">
            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "FinishedGoodsMaster") ? "active" : "")" asp-controller="FinishedGoodsMaster" asp-action="Index">Finished Goods Master</a>
        </li>
        <li class="nav-item">
            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "ProductionPlan") ? "active" : "")" asp-controller="ProductionPlan" asp-action="Index">Production Plan</a>
        </li>
        <li class="nav-item">
            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "Inventory") ? "active" : "")" asp-controller="Inventory" asp-action="Index">Inventory</a>
        </li>
    </ul>
</div>

                    </ul>
                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="navbar-text text-dark me-3">
                                    Hello, @User.FindFirst("FullName")?.Value!
                                </span>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <button type="submit" class="btn btn-outline-danger">Logout</button>
                                </form>
                            </li>
                        }
                        <li class="nav-item ms-1">
                            <img src="~/image/Logo.ico" alt="Logo" style="height:70px; width:auto;" />
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Manufacturing ERP - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- jQuery and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery Validation Scripts (Ensuring the right order) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <!-- Local Scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Ensure Validation is reset -->
    <script>
        $(document).ready(function () {
            console.log("Initializing jQuery Validation...");
            if ($.validator && $.validator.unobtrusive) {
                console.log("Resetting jQuery validation...");
                $("form").removeData("validator");
                $("form").removeData("unobtrusiveValidation");
                $.validator.unobtrusive.parse("form");
            } else {
                console.error("jQuery Unobtrusive Validation is not loaded!");
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

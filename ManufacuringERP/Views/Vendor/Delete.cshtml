@model ManufacturingERP.Entity.Models.Vendor

<h2>Delete Vendor</h2>

<h4>Are you sure you want to delete this vendor?</h4>
<hr />

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="VendorId" />

    <div class="form-group">
        <label>Vendor Name</label>
        <input asp-for="VendorName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Address</label>
        <input asp-for="Address" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Company Name</label>
        <input asp-for="CompanyName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Status</label>
        <input asp-for="Status" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

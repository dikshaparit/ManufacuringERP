@model ManufacturingERP.Entity.RawMaterial

@{
    ViewData["Title"] = "Raw Material Details";
}

<style>
    .border-bold {
        border: 2px solid #000 !important;
        background-color: #f8f9fa;
        font-weight: bold !important;
        color: black !important;
    }

    /* Apply bold to all elements inside the card */
    .card label,
    .card h5,
    .card input,
    .card .form-label,
    .card .form-control,
    .card textarea {
        font-weight: bold !important;
        color: black !important;
    }

    /* Bold text on buttons too */
    .btn {
        font-weight: bold !important;
    }

    h2 {
        font-weight: bold;
    }
</style>

<h2 class="text-dark mb-4">@ViewData["Title"]</h2>

<!-- Raw Material Info Card -->
<div class="card shadow-sm rounded-4 p-4 bg-light mb-4">
    <h5 class="text-primary mb-3">Raw Material Information</h5>

    <div class="row mb-3">
        <div class="col-md-6">
            <label class="form-label text-muted">Material Type</label>
            <input class="form-control border-bold" value="@Model.MaterialType" readonly />
        </div>
        <div class="col-md-6">
            <label class="form-label text-muted">Material Name</label>
            <input class="form-control border-bold" value="@Model.MaterialName" readonly />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label class="form-label text-muted">Vendor</label>
            <input class="form-control border-bold" value="@ViewBag.VendorName" readonly />
        </div>
        <div class="col-md-6">
            <label class="form-label text-muted">Unit</label>
            <input class="form-control border-bold" value="@Model.Unit" readonly />
        </div>
    </div>
</div>

<!-- Action Buttons -->
<div class="d-flex justify-content-end gap-2">
    <a asp-action="Edit" asp-route-id="@Model.RawMaterialId" class="btn btn-primary">
        <i class="bi bi-pencil-square"></i> Edit
    </a>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle"></i> Back to List
    </a>
</div>

@model ManufacturingERP.Entity.RawMaterial

@{
    ViewData["Title"] = "Create Raw Material";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Create Raw Material</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="form-group mb-3">
                    <label class="control-label fw-bold">Enter New Material Type</label>
                    <input type="text" name="MaterialType" class="form-control" placeholder="Type new material (e.g., Aluminum)" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MaterialName" class="control-label fw-bold"></label>
                    <input asp-for="MaterialName" class="form-control" placeholder="Enter Material Name" />
                    <span asp-validation-for="MaterialName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="VendorId" class="control-label fw-bold"></label>
                    <select asp-for="VendorId" class="form-control" asp-items="ViewBag.Vendors">
                        <option disabled selected>Select Vendor</option>
                    </select>
                    <span asp-validation-for="VendorId" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Unit" class="control-label fw-bold"></label>
                    <input asp-for="Unit" class="form-control" placeholder="Enter Unit (e.g., Kg, Liter)" />
                    <span asp-validation-for="Unit" class="text-danger"></span>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-save me-2"></i>Save
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

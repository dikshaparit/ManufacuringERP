@model ManufacturingERP.Entity.RawMaterial

@{
    ViewData["Title"] = "Edit Raw Material";
}

<h2>Edit Raw Material</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="RawMaterialId" />

    <div class="form-group">
        <label class="control-label">Material Type</label>
        <div>
            @foreach (var material in new List<string> { "Steel", "Fabric", "Plastic", "Wood" })
            {
                <div class="form-check">
                    <input type="checkbox" name="MaterialType" value="@material"
                           class="form-check-input"
                    @(Model.MaterialType.Contains(material) ? "checked" : "") />
                    <label class="form-check-label">@material</label>
                </div>
            }
        </div>
    </div>

    <!-- Material Name Field -->
    <div class="form-group">
        <label asp-for="MaterialName" class="control-label"></label>
        <input asp-for="MaterialName" class="form-control" placeholder="Enter Material Name" />
    </div>

    <div class="form-group">
        <label asp-for="VendorId" class="control-label"></label>
        <select asp-for="VendorId" class="form-control" asp-items="ViewBag.Vendors">
            <option>Select Vendor</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Unit" class="control-label"></label>
        <input asp-for="Unit" class="form-control" placeholder="Enter Unit" />
        <span asp-validation-for="Unit" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@model ManufacturingERP.Entity.RawMaterial

@{
    ViewData["Title"] = "Delete Raw Material";
}

<h2>Delete Raw Material</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Material Type</dt>
        <dd class="col-sm-10">
            @Model.MaterialType
        </dd>

        <dl class="row">
            <dt class="col-sm-2">Material Name</dt>
            <dd class="col-sm-10">
                @Model.MaterialName
            </dd>

        </dd>
        <dt class="col-sm-2">Vendor</dt>
        <dd class="col-sm-10">
            @ViewBag.VendorName
        </dd>

        <dt class="col-sm-2">Unit</dt>
        <dd class="col-sm-10">
            @Model.Unit
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="RawMaterialId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

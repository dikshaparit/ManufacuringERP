<style>
    .hero-section {
        position: relative;
        overflow: hidden;
        background: linear-gradient(-45deg, #0d6efd, #6610f2, #0dcaf0, #6f42c1);
        background-size: 400% 400%;
        animation: gradientBG 15s ease infinite;
        color: white;
        padding: 90px 25px;
        border-radius: 1rem;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        transition: box-shadow 0.3s ease;
    }

    .video-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.3;
        z-index: 0;
    }

    .hero-section > *:not(.video-bg) {
        position: relative;
        z-index: 1;
    }
</style>

<div class="container my-5">
    <div class="hero-section text-center">
        <!-- Video inside hero-section -->
        <video autoplay muted loop class="video-bg">
            <source src="@Url.Content("~/Video/vdo1.mp4")" type="video/mp4" />
        </video>

        <!-- New Logo -->
        <img src="~/image/Unioteq_PNG2.png" alt="Unioteq Logo" style="height: 100px; width: auto;" class="mb-4" />

        <h1>Welcome to <span class="custom-highlight">Manufacturing ERP</span></h1>
        <p>Efficiently manage inventory, vendors, purchase orders, and production workflows.</p>
        <a href="@Url.Action("Register", "Account")" class="btn btn-light text-primary fw-semibold shadow-sm">
            <i class="bi bi-box-arrow-in-right me-2"></i>Get Started
        </a>
    </div>
</div>

@model ManufacuringERP.Entity.Model.Inventory

@{
    ViewData["Title"] = "Inventory Details";
}

<h2>Inventory Details</h2>

<div class="form-group">
    <label class="control-label">Material Name</label>
    <p class="form-control-static">@Model.MaterialName</p>
</div>

<div class="form-group">
    <label class="control-label">Quantity</label>
    <p class="form-control-static">@Model.Quantity</p>
</div>

<div class="form-group">
    <label class="control-label">Unit</label>
    <p class="form-control-static">@Model.Unit</p>
</div>

<div class="form-group">
    <label class="control-label">Location</label>
    <p class="form-control-static">@Model.Location</p>
</div>

<div class="form-group">
    <label class="control-label">Status</label>
    <p class="form-control-static">@Model.Status</p>
</div>

<div class="form-group">
    <a asp-action="Edit" asp-route-id="@Model.InventoryId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@model ManufacuringERP.Entity.Model.Inventory

@{
    ViewData["Title"] = "Delete Inventory";
}

<h2>Delete Inventory</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Inventory Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Material Name
        </dt>
        <dd class="col-sm-10">
            @Model.MaterialName
        </dd>

        <dt class="col-sm-2">
            Quantity
        </dt>
        <dd class="col-sm-10">
            @Model.Quantity
        </dd>

        <dt class="col-sm-2">
            Unit
        </dt>
        <dd class="col-sm-10">
            @Model.Unit
        </dd>

        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>

        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="InventoryId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
    
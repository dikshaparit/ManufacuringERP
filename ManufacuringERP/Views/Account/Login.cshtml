@model ManufacturingERP.Entity.User

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #eef2f7;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-wrapper {
        max-width: 400px;
        margin: 60px auto;
        background: white;
        padding: 30px 35px;
        border-radius: 10px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        text-align: center; /* Center icon and heading */
    }

    h2 {
        color: #2c3e50;
        margin-bottom: 25px;
        font-weight: 600;
        letter-spacing: 1px;
    }

    .lock-icon {
        margin-bottom: 15px;
        color: #0d6efd; /* Bootstrap primary blue */
        width: 48px;
        height: 48px;
        stroke-width: 2.5;
    }

    .form-group label {
        font-weight: 500;
        color: #34495e;
        text-align: left;
        display: block;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
        font-weight: 600;
        border-radius: 6px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #004085;
        }

    .btn-secondary {
        width: 100%;
        margin-top: 10px;
        font-weight: 600;
        border-radius: 6px;
        padding: 10px;
        color: white;
        background-color: #6c757d;
        border: none;
        text-align: center;
        display: inline-block;
        text-decoration: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            color: white;
            text-decoration: none;
        }

    .alert-danger {
        font-weight: 600;
        text-align: center;
        margin-bottom: 20px;
    }

    span.text-danger {
        font-size: 0.9rem;
        margin-top: 5px;
        display: block;
    }
</style>

<div class="login-wrapper">
    <!-- Lock Icon SVG -->
    <svg xmlns="http://www.w3.org/2000/svg" class="lock-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
    </svg>

    <h2>Login</h2>

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-danger">@ViewBag.Message</div>
    }

    <form asp-action="Login" method="post" style="text-align: left;">
        <div class="form-group mb-3">
            <label>Email:</label>
            <input asp-for="Email" type="email" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label>Password:</label>
            <input asp-for="Password" type="password" class="form-control" required minlength="7" maxlength="7" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
        <a asp-action="Register" class="btn btn-secondary">Register</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

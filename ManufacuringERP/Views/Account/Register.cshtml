@model ManufacturingERP.Entity.User

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #eef2f7;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .register-wrapper {
        max-width: 450px;
        margin: 40px auto;
        background: white;
        padding: 30px 35px;
        border-radius: 10px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        color: #2c3e50;
        margin-bottom: 25px;
        font-weight: 600;
        letter-spacing: 1px;
    }

    .form-group label {
        font-weight: 500;
        color: #34495e;
    }

    .btn-success {
        width: 100%;
        padding: 10px;
        font-weight: 600;
        border-radius: 6px;
        transition: background-color 0.3s ease;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-back {
        margin-top: 10px;
        width: 100%;
        background: transparent;
        border: 2px solid #28a745;
        color: #28a745;
        font-weight: 600;
        border-radius: 6px;
    }

        .btn-back:hover {
            background-color: #28a745;
            color: white;
        }

    p.mt-2 {
        text-align: center;
        margin-top: 18px;
        font-size: 0.9rem;
        color: #7f8c8d;
    }

        p.mt-2 a {
            color: #28a745;
            font-weight: 600;
            text-decoration: none;
        }

            p.mt-2 a:hover {
                text-decoration: underline;
            }

    p.text-danger {
        font-size: 0.9rem;
        margin-top: 5px;
    }

    p.success-message {
        color: #28a745;
        font-weight: 600;
        text-align: center;
        margin-bottom: 20px;
    }
</style>

<div class="register-wrapper">
    <h2>Register</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <p class="success-message">@TempData["SuccessMessage"]</p>
    }

    <form asp-action="Register" method="post">
        <div class="form-group mb-3">
            <label>First Name</label>
            <input asp-for="FirstName" class="form-control" required />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>Last Name</label>
            <input asp-for="LastName" class="form-control" required />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>Email</label>
            <input asp-for="Email" type="email" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>Password</label>
            <input asp-for="Password" type="password" class="form-control" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label>Contact No</label>
            <input asp-for="ContactNo" class="form-control" required />
            <span asp-validation-for="ContactNo" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Register</button>
        <button type="button" onclick="history.back()" class="btn btn-back">Back</button>

        <p class="mt-2">
            Already have an account? <a href="@Url.Action("Login", "Account")">Login here</a>
        </p>

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <p class="text-danger">@ViewBag.Message</p>
        }
    </form>
</div>
